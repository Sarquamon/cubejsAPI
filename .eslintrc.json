{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "es2020": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
